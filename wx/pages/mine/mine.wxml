          </view>

          <view class="inner"> 
            <view class="text">
              <!-- 显示空白 -->
            </view>
            <image class="tu" src="https://cdn.jsdelivr.net/gh/Taj-x/images@main/img/首页-矩形框图片1.png" mode="aspectFill"></image>
          </view>
        </scroll-view>
      </view>
    </view>
    <!-- 登录后 -->
    <view  wx:else class="logined">
      <!-- 用户显示区域 -->
      <view  class="user2">
        <image  class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <view class="userinfo-nickname">
            <text class="text4">{{userInfo.nickName}}</text>
        </view>
        <image class="logout" bindtap="noUserProfile" src="https://c1.im5i.com/2021/11/17/JxZ14.png"></image>
      </view>
      <!-- 登录后的收藏与记录 -->
