          </view>
        </scroll-view>
        <!-- 浏览记录显示 -->
        <scroll-view scroll-y="true" wx:else class="scroll-box">
          <view class="inner"> 
            <view class="text">
              <!-- 显示空白 -->
            </view>
            <image class="tu" src="https://cdn.jsdelivr.net/gh/Taj-x/images@main/img/首页-矩形框图片4.png" mode="aspectFill"></image>
          </view>

          <view class="inner"> 
            <view class="text">
              <!-- 显示空白 -->
