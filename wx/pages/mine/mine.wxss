/* pages/mine/mine.wxss */
/* 未登录的用户显示区 */
.user1{
    width: 100%;
    height: 300rpx;
    background-image: url(https://cdn.jsdelivr.net/gh/Taj-x/images@main/img/首页-中部背景.png);
    display: flex;
    opacity: 0.9;
}
.denglv{
    width: 50%;
    height: 30%;
    background-color:greenyellow;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 100rpx;
    margin-left: 200rpx;
    border-radius: 20rpx;
}
.text1{
    font-size: 60rpx;
    font-weight: bolder;
}
.user2{
    width: 100%;
    height: 300rpx;
    background-image: url(https://cdn.jsdelivr.net/gh/Taj-x/images@main/img/首页-中部背景.png);
    opacity: 0.9;
    display: flex;
    flex-direction: row;
}
.userinfo-avatar{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-top: 57rpx;
    margin-left: 30rpx;
}
.userinfo-nickname{
    width: 400rpx;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 120rpx;
}
.text4{
    font-size: 45rpx;
}
.logout{
    width: 100rpx;
    height: 80rpx;
    margin-top: 110rpx;
}
/* 登录后的收藏 */
.collection2{
    width: 100%;
    height: 800rpx;
    background-color: white;
}
.select{
    width: 90%;
    height: 70rpx;
    margin-left: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.text3{
    font-size: 50rpx;
    margin-top: 10rpx;
}
.inner{
    display: flex;
    flex-direction: row;
    width:85%; 
    margin-left: 50rpx;
    height: 170rpx;
    margin-top: 15rpx;
    border-radius: 30rpx;
}
.text{
    width: 60%;
    display: flex;
    flex-direction: column;
}
.title{
    font-size: 35rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
}
.write{
    font-size: 30rpx;
    margin-top: 10rpx;
    margin-left: 40rpx;
}
.time{
    font-size: 30rpx;
    margin-left: 20rpx;
}
.tu{
    width: 40%;
    height: 100%;
    border-radius: 10rpx;
    opacity: 0.7;
}
