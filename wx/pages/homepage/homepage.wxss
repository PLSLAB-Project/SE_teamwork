/* pages/homepage/homepage.wxss */
.background{
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
}
.h1{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 40rpx;
    font-weight: bolder;
    height: 10%;
}
.box1{
    width: 600rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
    margin-left: 90rpx;
    border-radius: 20rpx;
    /* background-color:white; */
    background:rgba(255, 255, 255, 0.3);
    border: 3rpx solid;
}
.text1{
    margin-top: 20rpx;
    margin-left: 50rpx;
    font-size: 40rpx;
}
.mai{
    margin-top: 20rpx;
    margin-left: 110rpx;
    width: 50rpx;
    height: 50rpx;
}
.h2{
    width: 80%;
    margin-left: 80rpx;
    margin-top: 5rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    font-weight: bolder;
}
.article_container{
    margin-left: 80rpx;
    width: 80%;
    height: 80%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color:white;  
    border-radius: 30rpx;
}
.wait{
    width: 100%;
    height: 200rpx;
    border-radius: 30rpx;
}
.article{
    display: flex;
    flex-direction: row;
    width:100%; 
    height: 150rpx;
    border: 1rpx solid grey;
    margin-top: 15rpx;
    border-radius: 30rpx;
}
.text{
    width: 60%;
    font-size: 35rpx;
    font-weight: bold;
}
.tu{
    width: 40%;
    height: 100%;
}
