/* pages/homepage/homepage.wxss */
.background{
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
}
.h1{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 40rpx;
    font-weight: bolder;
    height: 10%;
}
.box1{
    width: 600rpx;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
    margin-left: 90rpx;
    border-radius: 20rpx;
    background:rgba(255, 255, 255, 0.3);
    border: 3rpx solid;
}
.text1{
    margin-top: 15rpx;
    margin-left: 50rpx;
    font-size: 35rpx;
    color: rgb(49, 114, 100);
}
.mai{
    margin-top: 10rpx;
    margin-left: 100rpx;
    width: 50rpx;
    height: 50rpx;
}
.h2{
    width: 80%;
    margin-left: 80rpx;
    margin-top: 10rpx;
    display: flex;
    font-size: 60rpx;
    font-weight: bold;
    color: rgb(101, 144, 236);
    flex-direction: row;
    /* justify-content: space-around; */
    font-weight: bolder;
}
.article_container{
    margin-left: 40rpx;
    width: 90%;
    height: 80%;
    display: flex;
    flex-direction: column;
    align-items: center; 
    border-radius: 30rpx;
    background-color: white;
}
.picture1{
    width: 100%;
    height: 200rpx;
    border-radius: 30rpx;
    position: relative;
    z-index: 1;
}
.picture2{
    width: 150rpx;
    height: 150rpx;
    position: absolute;
    z-index: 2;
}
.article{
    display: flex;
    flex-direction: row;
    width:100%; 
    height: 150rpx;
    margin-top: 15rpx;
    border-radius: 30rpx;
}
.text{
    width: 60%;
    display: flex;
    flex-direction: column;
}
.title{
    font-size: 35rpx;
    margin-top: 15rpx;
    margin-left: 20rpx;
}
.write{
    font-size: 30rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
}
.tu{
    width: 40%;
    height: 100%;
}
